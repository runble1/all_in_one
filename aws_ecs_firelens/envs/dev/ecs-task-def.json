{
  "containerDefinitions": [
    {
      "cpu": 512,
      "memory": 1024,
      "essential": true,
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "wget -q -O - http://localhost:3000/api/healthcheck || exit 1"
        ],
        "interval": 5,
        "retries": 3,
        "startPeriod": 60,
        "timeout": 5
      },
      "linuxParameters": {
        "initProcessEnabled": true
      },
      "image": "{{ or (env `IMAGE_URL` ``) (tfstate `module.ecs.aws_ssm_parameter.image_url.value`) }}",
      "logConfiguration": {
        "logDriver": "awsfirelens",
        "options": {
          "Name": "firehose",
          "region": "ap-northeast-1",
          "delivery_stream": "{{ env `KINESIS_FIREHOSE_NAME` ``}}"
        }
      },
      "name": "{{ env `SERVICE_NAME`}}-container",
      "portMappings": [
        {
          "appProtocol": "",
          "containerPort": 3000,
          "hostPort": 3000,
          "protocol": "tcp"
        }
      ]
    },
    {
      "essential": true,
      "image": "404307571516.dkr.ecr.ap-northeast-1.amazonaws.com/nextjs-ecs-firelens:latest",
      "name": "firelens-container",
      "firelensConfiguration": {
        "type": "fluentbit"
      },
      "memoryReservation": 50,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/firelens-logs",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "firelens"
        }
      }
    }
  ],
  "cpu": "512",
  "memory": "1024",
  "taskRoleArn": "{{ or (env `TASK_ROLE_ARN` ``) (tfstate `module.ecs.aws_iam_role.ecs_task_role.arn`) }}",
  "executionRoleArn": "{{ or (env `EXECUTION_ROLE_ARN` ``) (tfstate `module.ecs.aws_iam_role.ecs_task_execution_role.arn`) }}",
  "family": "{{ env `SERVICE_NAME`}}-task-definition",
  "ipcMode": "",
  "networkMode": "awsvpc",
  "pidMode": "",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "runtimePlatform": {
    "cpuArchitecture": "ARM64",
    "operatingSystemFamily": "LINUX"
  },
  "tags": [
    {
      "key": "Env",
      "value": "dev"
    },
    {
      "key": "System",
      "value": "nextjs"
    }
  ]
}
